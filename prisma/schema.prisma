generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    String  @id(map: "customer_pk") @unique
  name  String  @map("name")
  email String  @unique @map("email")
  cpf   String  @unique @map("cpf")
  order Order[]

  @@map("customer")
}

model Item {
  id         String      @id(map: "item_pk") @unique
  name       String      @unique
  price      String      @map("price")
  categoryId String      @map("category_id")
  category   Category    @relation(fields: [categoryId], references: [id])
  orderItem  OrderItem[]

  @@map("item")
}

model Category {
  id   String @id(map: "category_pk") @unique
  name String @unique @map("name")
  item Item[]

  @@map("category")
}

model Order {
  id            String      @id(map: "pedido_pk") @unique
  customerId    String?     @map("customer_id")
  Customer      Customer?   @relation(fields: [customerId], references: [id])
  totalValue    String      @map("total_value")
  items         OrderItem[]
  creationDate  DateTime    @map("creation_date")
  paymentStatus String      @map("payment_status")
  orderStatus   String      @map("orderStatus")

  @@map("order")
}

model OrderItem {
  id         String @id(map: "order_item_pk") @unique
  orderId    String @map("pedido_id")
  itemId     String @map("item_id")
  quantity   Int    @map("quantity")
  totalValue String @map("total_value")
  order      Order  @relation(fields: [orderId], references: [id])
  item       Item   @relation(fields: [itemId], references: [id])

  @@map("order_item")
}
