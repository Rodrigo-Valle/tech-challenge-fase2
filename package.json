{
	"name": "tech_challenge",
	"version": "1.0.0",
	"description": "Fase 2 do desafio Tech-Challenge da PosTech Arquitetura de Software - FIAP",
	"main": "index.js",
	"scripts": {
		"start": "node dist/index.js",
		"dev": "nodemon --watch src",
		"build": "rimraf dist && tsc --project tsconfig.build.json && tsconfig-replace-paths -p tsconfig.build.json -s ./src -o ./dist",
		"lint": "npx biome check ./src ./tests --apply",
		"test": "jest --passWithNoTests --no-cache --runInBand --silent",
		"test:watch": "npm run test -- --watch",
		"test:coverage": "npm run test -- --coverage",
		"check": "npm-check -s -u",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"src"
		],
		"exec": "node -r tsconfig-paths/register -r ts-node/register ./src/main/bootstrap.ts",
		"ext": "ts, js"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.5.3",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.6",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"husky": "^9.0.6",
		"jest": "^29.7.0",
		"jest-mock-extended": "^3.0.5",
		"nodemon": "^3.0.3",
		"prisma": "^5.8.1",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsconfig-replace-paths": "^0.0.14",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@prisma/client": "^5.8.1",
		"axios": "^1.6.8",
		"cors": "^2.8.5",
		"currency.js": "^2.0.4",
		"dotenv": "^16.4.5",
		"express": "^4.18.2",
		"got": "^14.2.1",
		"node-fetch": "^3.3.2",
		"npm-check": "^6.0.1",
		"pino": "^8.19.0",
		"pino-pretty": "^10.3.1",
		"rimraf": "^5.0.5",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.0",
		"zod": "^3.22.4"
	}
}
